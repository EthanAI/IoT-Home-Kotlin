<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My cat's name is Wiggles!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ToggleButton
        android:id="@+id/allHueLightsToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Hue On"
        android:textOff="Hue Off"
        android:checked="true"
        />

    <ToggleButton
        android:id="@+id/oneLightToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="1 On"
        android:textOff="1 Off"
        android:checked="true"
        app:layout_constraintStart_toEndOf="@id/allHueLightsToggleButton"
        />

    <ToggleButton
        android:id="@+id/bathroomLightToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Bathroom On"
        android:textOff="Bathroom Off"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@+id/allHueLightsToggleButton"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ToggleButton
        android:id="@+id/bedroomLightToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Bedroom On"
        android:textOff="Bedroom Off"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@+id/allHueLightsToggleButton"
        app:layout_constraintStart_toEndOf="@id/bathroomLightToggleButton"
        />

    <ToggleButton
        android:id="@+id/allLightsToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="All On"
        android:textOff="All Off"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@+id/bathroomLightToggleButton"
        app:layout_constraintStart_toStartOf="parent"
        />

</android.support.constraint.ConstraintLayout>